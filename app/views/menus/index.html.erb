<%= render 'components/breadcrumb', breadcrumbs: [
  { text: 'Home', path: root_path},
  { text: 'Menus', path: restaurant_menus_path(@restaurant)}
] %>

<% unless @menus.empty? %>
  <div class='p-10 overflow-x-auto'>
    <table class="w-11/12 border-separate border-spacing-x-0 border-spacing-y-2 text-xs">
      <thead class='bg-gray-800'>
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
            #
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
            Name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class='bg-white divide-y divide-gray-200'>
        <% @menus.each_with_index do |menu, index| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= index + 1 %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to menu.menu_name, restaurant_menu_path(@restaurant, menu), class: "font-semibold hover:underline hover:text-blue-400" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items center gap-10">
                <%= link_to new_restaurant_menu_menu_category_path(@restaurant, menu), class: "hover:bg-gray-900 hover:text-white p-1" do %>
                  <i class="fas fa-plus"></i>
                  <span class="ml-2">Add Category</span>
                <% end %>
                <%= link_to edit_restaurant_menu_path(@restaurant, menu), class: "text-blue-500 hover:bg-blue-500 hover:text-white p-1" do %>
                  <i class="fas fa-pencil-alt"></i>
                  <span class="ml-2">Edit</span>
                <% end %>
                <%= button_to restaurant_menu_path(@restaurant, menu), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:bg-red-500 hover:text-white p-1" do %>
                  <i class="fas fa-trash-alt"></i>
                  <span class="ml-2">Delete</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class='flex flex-col items-center justify-center h-96'>
    <h4 class='text-2xl font-bold mb-5'>You have no menus yet</h4>
  </div>
<% end %>