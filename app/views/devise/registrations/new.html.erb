<div class='flex flex-col justify-center items-center mt-10'>
  <h2 class='text-2xl text-center capitalize font-primary'>Set up an admin user </h2>

   <%= form_for(resource, as: resource_name, url: user_registration_path, method: :post, html: { class: "flex flex-col gap-10 mt-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :email, value: @restaurant.email %>
    <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
    <%= f.hidden_field :role, value: 'admin' %>

    <div class="flex flex-col gap-i">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, disabled: true, class: "bg-gray-100", value: @restaurant.email %>
    </div>

    <div class='grid sm:grid-cols-2 grid-cols-1 gap-6'>
      <div class="flex flex-col gap-1">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="flex flex-col gap-1">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true %>
      </div>

      <div class="flex flex-col gap-1">
        <div class="flex gap-1">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="flex justify-center items-center">
      <%= f.submit "Submit", class: "bg-primary text-white py-2 px-4 cursor-pointer font-medium" %>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>

</div>
