<div class="grid sm:grid-cols-3 grid-cols-1">

  <div class="col-span-1 -mt-16 sm:flex hidden">
   <%= image_tag('menu-2.jpg', class: "w-full h-full object-cover") %>
  </div>


  <div class="col-span-2 px-10 sm:w-3/4">

    <div class="flex gap-2  items-center mb-5">
      <a href="/users/sign_in" class="sm:text-4xl text-2xl font-bold text-right hover:underline">log in.</a>
      <hr class='w-1/6 border-t-2 border-gray-900'>
    </div>

    <%= form_for(resource, as: resource_name, url: new_user_session_path, html: { class: "flex flex-col gap-4 sm:w-3/4" }) do |f| %>
      <div class="flex flex-col gap-4">
        <%= f.label :email, class: "block font-medium text-gray-900 text-sm" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-2 border-black bg-transparent outline-none focus:outline-none py-2 px-4 text-black placeholder:text-gray-900 placeholder:text-xs" %>
      </div>

      <div class="flex flex-col gap-4">
        <%= f.label :password, class: "block font-medium text-gray-900 text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "border-2 border-black bg-transparent outline-none focus:outline-none py-2 px-4 text-black placeholder:text-gray-900 placeholder:text-xs" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 mt-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "py-2 mt-4 px-5 bg-black text-center text-white font-medium cursor-pointer rounded w-48" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>

