<ul class='mt-5 flex flex-col gap-3 text-xs'>

  <%= render 'layouts/shared_links' %>

  <% if current_user.restaurant_user? %>
    <%= render 'layouts/shared_restaurant_links' %>
    <% if @restaurant.single? %>
    <%= render 'layouts/single_restaurant_links' %>
    <% end %>

    <% if @restaurant.chain? %>
      <%= render 'layouts/chain_restaurant_links' %>
    <% end %>

    <% if @restaurant.group? %>
      <%= render 'layouts/group_restaurant_links' %>
    <% end %>
  <% elsif current_user.super_admin? %>
    <%= render 'layouts/super_admin_links' %>
  <% end %>

</ul>