<div class="flex flex-col  fixed inset-0 right-3/4 bg-gray-800 text-white font-normal text-sm z-10 hidden" id='mobile-sidebar'>
  <div class="flex justify-between items-center gap-20 py-6 px-4">
    <div class="flex items-center gap-2">
      <%= image_tag(@restaurant.logo, alt: "Restaurant Logo", class: "rounded-full w-8 h-8 object-cover") %>
      <span class="text-sm font-semibold uppercase"><%= @restaurant.name %></span>
    </div>
    <i class="fa-solid fa-times" onclick="document.getElementById('mobile-sidebar').classList.add('hidden')"></i>
  </div>

  <ul class='mt-5 flex flex-col gap-3'>

    <li data-active-page-target="sidebarItem" data-path="/" class="sidebar-item py-2 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500">
      <%= link_to root_path, class: "px-4 flex gap-2 items-center" do %>
        <i class="fa-solid fa-chart-simple"></i>
        <span>Dashboard</span>
      <% end %>
    </li>

    <li data-controller="dropdown" class='relative'>

      <button data-action="click->dropdown#toggle" class="hover:text-gray-300 flex items-center gap-1 px-4 py-2 w-full hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500">
        <span>Actions</span>
        <i class="fa-solid fa-caret-down"></i>
      </button>

      <ul data-dropdown-target="menu" class="hidden text-white rounded-md mt-3 flex flex-col gap-3">

        <li class='py-2 px-4 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500 sidebar-item' data-active-page-target="sidebar-item" data-path="actions">
          <a href="#">Action 1</a>
        </li>

        <li class='py-2 px-4 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500 sidebar-item' data-active-page-target="sidebar-item" data-path="actions"><a href="#">Action 2</a></li>

        <li class='py-2 px-4 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500 sidebar-item' data-active-page-target="sidebar-item" data-path="actions"><a href="#">Action 3</a></li>
      </ul>

    </li>

    <li data-active-page-target="sidebarItem" data-path="settings" class="sidebar-item py-2 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500">
      <%= link_to settings_restaurant_path(@restaurant), class: "px-4 flex items-center gap-2" do %>
        <i class="fa-solid fa-gear"></i>
        <span>Settings</span>
      <% end %>
    </li>
  </ul>

</div>