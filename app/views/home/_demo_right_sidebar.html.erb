<% categories_data = [
  ["Burgers", 20],
  ["Pizzas", 30],
  ["Pasta", 10],
] %>

<% items_data = [
  ["Menus", 2],
  ["Items", 40],
] %>



<div class="sm:flex hidden flex-col justify-start h-96 sm:w-28 rounded glass px-2 py-5 absolute right-0 top-0">

 <div class="flex justify-center items-center gap-4 absolute right-4">
    <div class='relative'>
      <i class="fa-solid fa-bell text-base"></i>
      <div class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full h-4 w-4 flex justify-center items-center text-[8px]">3</div>
    </div>
    <%= image_tag('avatar.webp', alt: "avatar", class: "sm:h-6 h-6 rounded-full object-cover") %>
 </div>

 <div class="flex flex-col gap-3 mt-10 relative">
   <h4 class="text-white text-xs font-semibold uppercase">Analysis</h4>
   <div class="absolute w-36 -top-12 -left-5">
    <%= pie_chart categories_data, id: "pie_chart", donut: true, legend: "false", width: "100%", height: "100%", colors: ["#CCCCCC", "#999999", "#666666", "#333333"] %>
   </div>
 </div>

 <div class="flex flex-col gap-3 mt-52 relative">
   <div class="absolute w-36 -top-10 -left-2">
    <%= bar_chart items_data, id: "column_chart", width: "90%", height: "100%", colors: ["#CCCCCC", "#999999", "#666666", "#333333"] %>
   </div>
 </div>



</div>