<li data-controller="dropdown" class='relative'>
  <button data-action="click->dropdown#toggle" class="flex items-center gap-1 px-4 py-2 w-full hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500">
    <p class='flex items-center gap-2 capitalize'>
      <i class="<%= icon_class %>"></i>
      <span class><%= title %></span>
    </p>
    <i class="fa-solid fa-caret-down"></i>
  </button>

  <ul data-dropdown-target="menu" class="hidden text-white rounded-md mt-3 flex flex-col gap-3">
    <% items.each do |item| %>
      <li class='py-2 px-4 hover:bg-gray-50 hover:text-gray-600 hover:border-l-4 hover:border-gray-500 sidebar-item' data-active-page-target="sidebar-item" data-path="<%= item[:path] %>">
        <%= link_to item[:path], class: "px-4 flex items-center gap-2" do %>
          <i class="<%= item[:icon_class] %>"></i>
          <%= item[:menu_text] %>
        <% end %>
      </li>
    <% end %>
  </ul>
</li>
