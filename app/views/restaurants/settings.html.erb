<% tabs = [
  { id: 'profile', label: 'profile', partial: 'restaurants/settings/profile' },
]
%>

<% if @restaurant.single? %>
  tabs << { id: 'contacts', label: 'contacts', partial: 'restaurants/settings/contacts' }
  tabs << { id: 'location', label: 'location', partial: 'restaurants/settings/location' }
<% end %>

<%= render 'components/breadcrumb', breadcrumbs: [
  { text: 'Home', path: root_path},
  { text: 'Settings'}
] %>

<%= render 'components/tabs', tabs: tabs %>


