<div class="grid sm:grid-cols-3 grid-cols-1 sm:-mt-6">

  <div class="col-span-2 sm:px-10 px-4">
    <div class="flex gap-2  items-center mb-5">
      <hr class='w-1/6 border-t-2 border-gray-900'>
      <%= link_to confirm_restaurant_path(@restaurant), class: "sm:text-4xl text-2xl font-bold text-right hover:underline" do %>confirm your account.<% end %>
    </div>

    <div class="flex flex-col gap-4 mt-8">
      <p class='mt-2 text-left w-1/2 leading-7'>
        We have sent an email to <b><%= @restaurant.email %></b> with a link to confirm your account.
      </p>
      <p class='mt-2 text-left w-1/2 leading-7'>
        Please check your email and click on the link to confirm your account to activate your account.
      </p>
    </div>
  </div>

  <div class="col-span-1 sm:flex -mt-10 hidden">
    <%= image_tag('menu-3.jpg', class: "w-full h-full object-cover") %>
  </div>
</div>
